        app:layout_constraintTop_toBottomOf="@+id/nilai2" />

    <EditText
        android:id="@+id/nilai4"
        android:layout_width="262dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Kepribadian"
        app:layout_constraintEnd_toStartOf="@+id/inputnilai4"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nilai3" />

    <EditText
        android:id="@+id/nilai5"
        android:layout_width="262dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Disiplin"
        app:layout_constraintEnd_toStartOf="@+id/inputnilai5"
        app:layout_constraintHorizontal_bias="0.734"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nilai4" />


</androidx.constraintlayout.widget.ConstraintLayout>
