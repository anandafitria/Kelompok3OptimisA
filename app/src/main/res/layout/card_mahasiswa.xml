<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_mhs"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_namamhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mhs"
            android:fontFamily="@font/poppinssemibold"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_nimmhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_namamhs"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mhs"
            android:fontFamily="@font/poppinssemibold"
            android:text="NIM"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_haritanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nimmhs"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_mhs"
            android:fontFamily="@font/poppinsregular"
            android:text="Hari/Tanggal"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_pukul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_haritanggal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mhs"
            android:fontFamily="@font/poppinsregular"
            android:text="Jam"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_ruang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pukul"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mhs"
            android:fontFamily="@font/poppinsregular"
            android:text="Ruangan"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>