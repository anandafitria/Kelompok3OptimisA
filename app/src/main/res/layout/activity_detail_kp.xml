<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailKP"
    android:background="@color/secondary_color">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/primary_color"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_baseline_home" />

            <ImageButton
                android:id="@+id/btn_logbook"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_color"
                android:contentDescription="@string/btn_logbook"
                android:minHeight="48dp"
                app:srcCompat="@drawable/ic_baseline_calendar_today" />

            <ImageButton
                android:id="@+id/btn_seminar"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_color"
                android:contentDescription="@string/btn_seminar"
                app:srcCompat="@drawable/ic_baseline_add_task" />

            <ImageButton
                android:id="@+id/btn_profil"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/primary_color"
                android:contentDescription="@string/btn_profil"
                app:srcCompat="@drawable/ic_baseline_person" />
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <TextView
        android:id="@+id/txt_alamatkp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Alamat Perusahaan"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_seminarkp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinssemibold"
        android:paddingTop="10dp"
        android:text="Seminar KP"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kp"
        app:layout_constraintVertical_bias="0.549" />

    <Button
        android:id="@+id/btn_nilaikp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinssemibold"
        android:paddingTop="10dp"
        android:text="Input Nilai KP"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kp"
        app:layout_constraintVertical_bias="0.331" />

    <TextView
        android:id="@+id/txt_ttl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Tempat/Tanggal Lahir"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txt_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Alamat"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txt_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Telpon/HP"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        tools:layout_editor_absoluteX="198dp" />

    <TextView
        android:id="@+id/txt_nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="NIM"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:text="Detail Kerja Praktek"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txt_namamhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Nama Mahasiswa"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/view_nama"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Ananda Fitria"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/view_nim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.857"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_nim"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="2011522014"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_namamhs"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_ttl"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Padang/13 Desemer 2001"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nim"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_hp"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="0895421152403"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_ttl"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_alamat"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Jalan Situjuh 2 No.10"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/view_namapt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_hp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_namapt"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="PT. Shopee Indonesia"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_alamatkp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_alamat"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/view_alamatpt"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:text="Jalan Sudirman Blok A No.45-46"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_alamatkp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_namapt"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_logbookkp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppinssemibold"
        android:paddingTop="10dp"
        android:text="Logbook KP"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kp"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/btn_pembatalankp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:width="200dp"
        android:background="@drawable/button_warning"
        android:fontFamily="@font/poppinssemibold"
        android:paddingTop="10dp"
        android:text="Pembatalan KP"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_kp"
        app:layout_constraintVertical_bias="0.757" />

    <TextView
        android:id="@+id/txt_kp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:paddingStart="15dp"
        android:text="Nama Perusahaan"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/upper_navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingTop="13dp"
            android:fontFamily="@font/poppinssemibold"
            android:text="@string/kp_main"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:contentDescription="@string/btn_back"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new" />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="121dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_namamhs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_baseline_person" />

</androidx.constraintlayout.widget.ConstraintLayout>